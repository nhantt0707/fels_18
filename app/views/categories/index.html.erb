<% provide(:title, 'All words') %> 
<h1>All Categories</h1>

<table class="table">
	<thead>
		<tr>
			<th>Category's Name</th>
			<th>You've learned</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<%@categories.each do |category|%>
		<tr>
			<td><%= category.name %></td>
			<td><%= (Word.learned current_user.id ,category.id).count %> / <%= category.words.count %></td>
			<td><%= link_to "Start", "#", class: "btn btn-default" %></td>
		</tr>
		<%end%>
	</tbody>
</table>